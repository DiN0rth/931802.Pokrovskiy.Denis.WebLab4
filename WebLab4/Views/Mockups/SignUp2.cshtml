@model SignUp
@{ViewData["Title"] = "SignUp";}

<h1>Sign up</h1>

<form method="post">
    <b>Email</b><br>
    <div style="margin-top:10px">@Html.EditorFor(p => p.Email) @Html.ValidationMessageFor(p => p.Email)</div><br>
    <b style="margin-top:10px">Password</b><br>
    <div style="margin-top:10px">@Html.PasswordFor(p => p.Password) @Html.ValidationMessageFor(p => p.Password)</div><br>
    <b style="margin-top:10px">Confirm password </b><br>
    <div style="margin-top:10px">@Html.PasswordFor(p => p.ComparePassword) @Html.ValidationMessageFor(p => p.ComparePassword)</div><br>
    <input type="checkbox" name="Remember" value="true"><label>Remember?</label><br>
    <input type="submit" value="Complete sign up" class="btn btn-primary mt-3 pr-3 pl-3">
</form>